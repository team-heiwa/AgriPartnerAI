# Google Cloud Platform Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Cloud Storage Buckets (from Terraform outputs)
GCS_INPUT_BUCKET=${project_id}-pipeline-input-${environment}
GCS_OUTPUT_BUCKET=${project_id}-pipeline-output-${environment}
GCS_TEMP_BUCKET=${project_id}-pipeline-temp-${environment}

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-1.5-flash

# Processing Configuration
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_DURATION_SECONDS=300
CONCURRENT_WORKERS=5
AUDIO_SAMPLE_RATE=16000
IMAGE_SUPPORTED_FORMATS=jpg,jpeg,png,gif,bmp

# Monitoring
ENABLE_CLOUD_LOGGING=true
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=dev